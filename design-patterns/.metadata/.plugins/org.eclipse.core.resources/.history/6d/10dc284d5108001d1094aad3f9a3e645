package meal;

import meal.MealRegistry;
import meal.MealType;
import meal.ChildrenMeal;
import meal.Lunch;
import meal.Dinner;

public class MealMain{
	
	public static void main(String[] args){
		
		MealRegistry mealRegistry = new MealRegistry();
		
		Breakfast br1 = (Breakfast) mealRegistry.getMeal(MealType.BREAKFAST);
		br1.setNumberOfMeals(3);
		br1.orderMeal(br1.getNumberOfMeals());
		System.out.println(br1);
		
		Breakfast br2 = (Breakfast) mealRegistry.getMeal(MealType.BREAKFAST);
		br2.setNumberOfMeals(5);
		br2.setMainMeal("Burger");
		br2.setSideMeal("Fries");
		br1.orderMeal(br2.getNumberOfMeals());
		System.out.println(br2);
		
		Lunch lu1 = (Lunch) mealRegistry.getMeal(MealType.LUNCH);
		lu1.setNumberOfMeals(2);
		lu1.orderMeal(lu1.getNumberOfMeals());
		System.out.println(lu1);
		
		Dinner dn1 = (Dinner) mealRegistry.getMeal(MealType.DINNER);
		dn1.setNumberOfMeals(8);
		dn1.orderMeal(dn1.getNumberOfMeals());
		System.out.println(dn1);
			
	}
	
}