package meal;

import meal.MealRegistry;
import meal.MealType;
import meal.ChildrenMeal;
import meal.VegeterianMeal;
import meal.NonVegeterianMeal;

public class MealMain{
	
	public static void main(String[] args){
		
		MealRegistry mealRegistry = new MealRegistry();
		
		Breakfast br1 = (Breakfast) mealRegistry.getMeal(MealType.CHILDREN);
		br1.setNumberOfMeals(3);
		br1.orderMeal(br1.getNumberOfMeals());
		System.out.println(br1);
		
		Breakfast br2 = (Breakfast) mealRegistry.getMeal(MealType.CHILDREN);
		br2.setNumberOfMeals(5);
		br2.setMainMeal("Burger");
		br2.setSideMeal("Fries");
		br1.orderMeal(br2.getNumberOfMeals());
		System.out.println(br2);
		
		VegeterianMeal vm1 = (VegeterianMeal) mealRegistry.getMeal(MealType.VEGETERIAN);
		vm1.setNumberOfMeals(2);
		vm1.orderMeal(vm1.getNumberOfMeals());
		System.out.println(vm1);
		
		NonVegeterianMeal nvm1 = (NonVegeterianMeal) mealRegistry.getMeal(MealType.NON_VEGETERIAN);
		nvm1.setNumberOfMeals(8);
		nvm1.orderMeal(nvm1.getNumberOfMeals());
		System.out.println(nvm1);
			
	}
	
}